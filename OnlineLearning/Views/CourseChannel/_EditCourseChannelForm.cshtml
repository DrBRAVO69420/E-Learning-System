@model OnlineLearning.Models.CourseChannelViewModel

@using (Html.BeginForm("EditCourseChannel", "CourseChannel", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)
    <div class="row">
        @Html.LabelFor(m => m.Name, new { @class = "control-label required" })
        @Html.Kendo().TextBoxFor(m => m.Name)
        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
    </div>
    <div class="row">
        @Html.LabelFor(m => m.Description, new { @class = "control-label required" })
        @Html.TextArea("Description", new { rows = 4, @class = "width100 k-textbox" })
        @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
    </div>
    <div class="row">
        <input type="submit" value="Submit" class="button-indigo" />
    </div>
}
