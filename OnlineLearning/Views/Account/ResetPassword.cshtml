@model OnlineLearning.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset password";
}

<div class="largePaddingTopBottom">
    <div class="row">
        <div class="col-md-10 centerBlock">
            <div class="col-md-12 w3-white padding-32" style="border-radius:10px">
                <div class="col-md-5">
                    <img src="~/Assest/login.png" class="img-responsive" /> <!--1080px * 1080px-->
                </div>
                <div class="col-md-6" style="padding-left:0px">
                    @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.Code)
                        <div class="w3-padding-24 ">
                            <h3 class="text-indigo text-center bolder" style="margin-bottom:5px"><b>RESET PASSWORD</b></h3>
                        </div>
                        @Html.ValidationSummary("", new { @class = "text-danger text-center" })
                        <div class="form-group">
                            @Html.LabelFor(m => m.Email, new { @class = "col-md-4 control-label required" })
                            <div class="col-md-8">
                                @Html.Kendo().TextBoxFor(m => m.Email)
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.Password, new { @class = "col-md-4 control-label required" })
                            <div class="col-md-8">
                                @Html.Kendo().TextBoxFor(m => m.Password).HtmlAttributes(new { type = "password" })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-4 control-label required" })
                            <div class="col-md-8">
                                @Html.Kendo().TextBoxFor(m => m.ConfirmPassword).HtmlAttributes(new { type = "password" })
                                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group w3-padding-16">
                            <div class="col-md-offset-4 col-md-8">
                                <input type="submit" value="Reset Password" class="button-indigo width100" />
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

