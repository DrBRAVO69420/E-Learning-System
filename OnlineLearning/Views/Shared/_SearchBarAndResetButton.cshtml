<script>
    function onSearchKeyUp(gridId) {
        var valSearched = $('#search').val();
        var grid = $("#" + gridId).data("kendoGrid");
        if (gridId == 'UserGrid') {
            console.log("here");
            grid.dataSource.filter({
                logic: "or",
                filters: [
                    {
                        field: "Username",
                        operator: "contains",
                        value: valSearched
                    },
                     {
                        field: "Email",
                        operator: "contains",
                        value: valSearched
                    },
                      {
                        field: "Name",
                        operator: "contains",
                        value: valSearched
                    },
                      {
                        field: "Role",
                        operator: "contains",
                        value: valSearched
                    },
                      {
                        field: "UserStatus",
                        operator: "contains",
                        value: valSearched
                    },{
                        field: "Code",
                        operator: "contains",
                        value: valSearched
                    }
                ]
            });
        } 
        if ( gridId == 'GeneralAnnouncementGrid') {
            grid.dataSource.filter({
                logic: "or",
                filters: [
                    {
                        field: "TitleText",
                        operator: "contains",
                        value: valSearched
                    },
                     {
                        field: "Details",
                        operator: "contains",
                        value: valSearched
                    },
                      {
                        field: "AdminName",
                        operator: "contains",
                        value: valSearched
                    }
                ]
            });
        } 
        if ( gridId == 'CourseChannelAnnouncementGrid') {
            grid.dataSource.filter({
                logic: "or",
                filters: [
                    {
                        field: "TitleText",
                        operator: "contains",
                        value: valSearched
                    },
                     {
                        field: "Details",
                        operator: "contains",
                        value: valSearched
                    }
                ]
            });
        } 
        if ( gridId == 'AssignmentGrid') {
                grid.dataSource.filter({
                    logic: "or",
                    filters: [
                        {
                            field: "AssignmentTitle",
                            operator: "contains",
                            value: valSearched
                        }
                    ]
                });
        } 
        if ( gridId == 'StudentGrid') {
            grid.dataSource.filter({
                logic: "or",
                filters: [
                    {
                        field: "Name",
                        operator: "contains",
                        value: valSearched
                    },
                    {
                        field: "Code",
                        operator: "contains",
                        value: valSearched
                    }
                ]
            });
        } 
        if ( gridId == 'ThreadGrid') {
            grid.dataSource.filter({
                logic: "or",
                filters: [
                    {
                        field: "ThreadTitle",
                        operator: "contains",
                        value: valSearched
                    }
                ]
            });
        } 
        if ( gridId == 'QuizGrid') {
            grid.dataSource.filter({
                logic: "or",
                filters: [
                    {
                        field: "QuizTitle",
                        operator: "contains",
                        value: valSearched
                    },
                    {
                        field: "Instruction",
                        operator: "contains",
                        value: valSearched
                    }
                ]
            });
        } 
    }
    function onResetSearch(gridId) {
        $('#search').val('');
        $("#" + gridId).data("kendoGrid").dataSource.filter([]);
    }
</script>
