<div class="row searchBar" style="margin:0px;padding-left:0px;padding-bottom:8px">
    <div class="col-md-10">
        <div class="input-group small">
            <span class="input-group-addon text-indigo bolder"><i class="glyphicon glyphicon-search"></i></span>
            <input id="search" type="text" class="k-textbox" placeholder="@ViewData["SearchPlaceHolder"]" onkeyup="onSearchKeyUp('@ViewData["GridId"].ToString()')" />
